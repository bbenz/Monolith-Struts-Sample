<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
    "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
  <formset>
    <form name="loginForm">
      <field property="email" depends="required,email">
        <arg0 key="label.email"/>
      </field>
      <field property="password" depends="required,minlength">
        <arg0 key="label.password"/>
        <var>
          <var-name>minlength</var-name>
          <var-value>8</var-value>
        </var>
      </field>
    </form>

    <form name="registerForm">
      <field property="email" depends="required,email">
        <arg0 key="label.email"/>
      </field>
      <field property="password" depends="required,minlength">
        <arg0 key="label.password"/>
        <var>
          <var-name>minlength</var-name>
          <var-value>8</var-value>
        </var>
      </field>
      <field property="passwordConfirm" depends="required">
        <arg0 key="label.passwordConfirm"/>
      </field>
      <field property="username" depends="required">
        <arg0 key="label.username"/>
      </field>
    </form>

    <form name="passwordResetRequestForm">
      <field property="email" depends="required,email">
        <arg0 key="label.email"/>
      </field>
    </form>

    <form name="passwordResetForm">
      <field property="token" depends="required">
        <arg0 key="label.token"/>
      </field>
      <field property="password" depends="required,minlength">
        <arg0 key="label.password"/>
        <var>
          <var-name>minlength</var-name>
          <var-value>8</var-value>
        </var>
      </field>
      <field property="passwordConfirm" depends="required">
        <arg0 key="label.passwordConfirm"/>
      </field>
    </form>

    <form name="addCartForm">
      <field property="productId" depends="required">
        <arg0 key="label.productId"/>
      </field>
      <field property="quantity" depends="required,int,integerRange">
        <arg0 key="label.quantity"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>999</var-value>
        </var>
      </field>
    </form>

    <form name="checkoutForm">
      <field property="cartId" depends="required">
        <arg0 key="label.cartId"/>
      </field>
      <field property="paymentMethod" depends="required">
        <arg0 key="label.paymentMethod"/>
      </field>
      <field property="cardNumber" depends="required,creditCard">
        <arg0 key="label.cardNumber"/>
      </field>
      <field property="cardExpMonth" depends="required,int,integerRange">
        <arg0 key="label.cardExpMonth"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>12</var-value>
        </var>
      </field>
      <field property="cardExpYear" depends="required,int">
        <arg0 key="label.cardExpYear"/>
      </field>
      <field property="cardCvv" depends="required,mask">
        <arg0 key="label.cardCvv"/>
        <var>
          <var-name>mask</var-name>
          <var-value>^[0-9]{3,4}$</var-value>
        </var>
      </field>
      <field property="billingZip" depends="required">
        <arg0 key="label.billingZip"/>
      </field>
    </form>

    <form name="couponForm">
      <field property="code" depends="required,minlength">
        <arg0 key="label.couponCode"/>
        <var>
          <var-name>minlength</var-name>
          <var-value>3</var-value>
        </var>
      </field>
    </form>

    <form name="addressForm">
      <field property="recipientName" depends="required">
        <arg0 key="label.recipientName"/>
      </field>
      <field property="postalCode" depends="required,mask">
        <arg0 key="label.postalCode"/>
        <var>
          <var-name>mask</var-name>
          <var-value>^[0-9]{3}-?[0-9]{4}$</var-value>
        </var>
      </field>
      <field property="prefecture" depends="required">
        <arg0 key="label.prefecture"/>
      </field>
      <field property="address1" depends="required">
        <arg0 key="label.address1"/>
      </field>
      <field property="phone" depends="required,mask">
        <arg0 key="label.phone"/>
        <var>
          <var-name>mask</var-name>
          <var-value>^0[0-9]{9,10}$</var-value>
        </var>
      </field>
    </form>

    <form name="adminProductForm">
      <field property="id" depends="required">
        <arg0 key="label.productId"/>
      </field>
      <field property="name" depends="required">
        <arg0 key="label.productName"/>
      </field>
      <!-- Maximum price is limited to the expected JPY range. -->
      <field property="price" depends="required,doubleRange">
        <arg0 key="label.productPrice"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>10000000</var-value>
        </var>
      </field>
      <field property="status" depends="required">
        <arg0 key="label.productStatus"/>
      </field>
      <field property="inventoryQty" depends="required,int,integerRange">
        <arg0 key="label.inventoryQty"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>99999</var-value>
        </var>
      </field>
    </form>

    <form name="adminCouponForm">
      <field property="code" depends="required">
        <arg0 key="label.couponCode"/>
      </field>
      <field property="couponType" depends="required">
        <arg0 key="label.couponType"/>
      </field>
      <field property="discountType" depends="required">
        <arg0 key="label.discountType"/>
      </field>
      <field property="discountValue" depends="required,doubleRange">
        <arg0 key="label.discountValue"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>100000</var-value>
        </var>
      </field>
      <field property="usageLimit" depends="required,int,integerRange">
        <arg0 key="label.usageLimit"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>99999</var-value>
        </var>
      </field>
    </form>

    <form name="adminShippingMethodForm">
      <field property="code" depends="required">
        <arg0 key="label.shippingCode"/>
      </field>
      <field property="name" depends="required">
        <arg0 key="label.shippingName"/>
      </field>
      <field property="fee" depends="required,doubleRange">
        <arg0 key="label.shippingFee"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>100000</var-value>
        </var>
      </field>
      <field property="sortOrder" depends="required,int,integerRange">
        <arg0 key="label.shippingSort"/>
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>999</var-value>
        </var>
      </field>
    </form>
  </formset>
</form-validation>
